                    <!--</goals>-->
                    <!--</execution>-->
                </executions>
                <configuration>
                    <repository>terrychank/${artifactId}</repository>
                    <tag>${project.version}</tag>
                    <buildArgs>
                        <JAR_FILE>target/${project.build.finalName}.jar</JAR_FILE>
                    </buildArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>


